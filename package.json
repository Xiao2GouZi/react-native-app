{
  "name": "react_native_app",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "tsc": "./node_modules/.bin/tsc -w",
    "test": "jest",
    "rm-b": "rm -rf ios/build && rm -rf android/build && rm -rf android/app/build",
    "sync": "rm -rf build/* && rsync -rv --delete --exclude=*.ts* ./src/* ./build/",
    "ios": "node node_modules/react-native/local-cli/cli.js run-ios --simulator \"iPhone X\" &&./node_modules/.bin/tsc -w",
    "android": "node node_modules/react-native/local-cli/cli.js run-android && ./node_modules/.bin/tsc -w",
    "android-release": "cd android && ./gradlew assembleRelease"
  },
  "dependencies": {
    "@types/react-navigation": "^3.0.5",
    "immutable": "^4.0.0-rc.12",
    "moment": "^2.23.0",
    "react": "16.6.3",
    "react-native": "0.57.8",
    "react-native-device-info": "^0.24.3",
    "react-native-gesture-handler": "1.1.0",
    "react-native-root-toast": "^3.0.1",
    "react-native-scrollable-tab-view": "^0.10.0",
    "react-native-swiper": "^1.5.14",
    "react-navigation": "3.4.0",
    "react-redux": "^6.0.0",
    "redux": "^4.0.1",
    "redux-actions": "^2.6.4",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@types/node": "^10.12.15",
    "@types/react": "^16.7.17",
    "@types/react-native": "^0.57.18",
    "@types/react-redux": "^6.0.11",
    "@types/redux-actions": "^2.3.1",
    "babel-jest": "23.6.0",
    "jest": "23.6.0",
    "metro-react-native-babel-preset": "0.48.5",
    "react-native-typescript-transformer": "^1.2.10",
    "react-test-renderer": "16.6.3",
    "ts-jest": "^23.10.5",
    "tslib": "^1.9.3",
    "typescript": "^3.2.2"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(js)$": "<rootDir>/node_modules/babel-jest",
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/"
    ],
    "cacheDirectory": ".jest/cache"
  }
}
